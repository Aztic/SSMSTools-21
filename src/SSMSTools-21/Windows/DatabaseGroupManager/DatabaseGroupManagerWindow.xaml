<Window x:Class="SSMSTools_21.Windows.DatabaseGroupManager.DatabaseGroupManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SSMSTools_21.Windows.DatabaseGroupManager" Height="317.219" Width="455.59"
        ContentRendered="Window_ContentRendered"
        >
    <Grid Margin="0,0,2,-362">
        <StackPanel Margin="10,10,10,334">
            <StackPanel>
                <Label
                Padding="0,5,5,5"
                FontWeight="Bold"
                FontSize="11">
                    Name
                </Label>
                <TextBox
                    Text="{Binding DatabaseGroupName, Mode=TwoWay}">
                </TextBox>
            </StackPanel>
            <!-- Select All Checkbox -->
            <CheckBox Content="Select All"
                  IsChecked="{Binding IsAllSelected, Mode=TwoWay}"
                      FontSize="12"
                  Margin="0,10,0,10"/>

            <!-- Scrollable List of databases -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="150">
                <ItemsControl ItemsSource="{Binding Databases}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding Name}"
                                  IsChecked="{Binding IsSelected, Mode=TwoWay}">
                                <CheckBox.Style>
                                    <Style TargetType="CheckBox">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsVisible}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </CheckBox.Style>
                            </CheckBox>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Action buttons -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Cancel" Width="80"  Margin="0,0,10,0" Click="CancelButton_Click"/>
                <Button Content="Save" Width="80" Click="SaveButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>

</Window>