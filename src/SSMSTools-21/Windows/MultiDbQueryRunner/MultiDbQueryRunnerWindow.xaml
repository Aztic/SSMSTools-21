<Window x:Class="SSMSTools_21.Windows.MultiDbQueryRunner.MultiDbQueryRunnerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SSMSTools_21.Windows.MultiDbQueryRunner" Height="595.388" Width="418.811"
        >
    <Grid Margin="0,0,0,-188">
        <StackPanel Margin="10">
            <StackPanel Grid.Row="3" Orientation="Vertical" HorizontalAlignment="Left" Margin="0,10,0,0">
                <Label
                    Padding="0,5,5,0"
                    FontSize="14"
                    FontWeight="Bold">
                    Selected server:
                </Label>
                <Label 
                    Padding="0,5,5,5"
                    FontSize="12" 
                    Content="{Binding ServerName}" />
            </StackPanel>
            <Label
                Padding="0,5,5,5"
                FontWeight="Bold"
                FontSize="14">
                Databases:
            </Label>
            <StackPanel>
                <Label
                Padding="0,5,5,5"
                FontWeight="Bold"
                FontSize="11">
                    Saved groups:
                </Label>
                <StackPanel Orientation="Horizontal">
                    <ComboBox Margin="0,10,10,10" Width="310"
                              Name="DatabaseGroupsCombobox"
                              ItemsSource="{Binding Path=DatabaseGroups}"
                              DisplayMemberPath="Title"
                              SelectedValue="{Binding Path=SelectedDatabaseGroup, Mode=TwoWay}">

                    </ComboBox>
                    <Button Click="EditButton_Click"
                            Name="EditButton"
                            Padding="10,0,10,0"
                            Height="23"
                            IsEnabled="False"
                            Visibility="Hidden">
                        Create
                    </Button>
                </StackPanel>
            </StackPanel>

            <!-- Show system databases Checkbox -->
            <CheckBox Content="Show system databases"
                  IsChecked="{Binding IsShowSystemDatabasesSelected, Mode=TwoWay}"
                      FontSize="12"
                  Margin="0,0,0,10"/>
            <!-- Select All Checkbox -->
            <CheckBox Content="Select All"
                  IsChecked="{Binding IsAllSelected, Mode=TwoWay}"
                      FontSize="12"
                  Margin="0,0,0,10"/>

            <!-- Scrollable List of Items -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="150">
                <ItemsControl ItemsSource="{Binding Databases}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding Name}"
                                  IsChecked="{Binding IsSelected, Mode=TwoWay}">
                                <CheckBox.Style>
                                    <Style TargetType="CheckBox">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsVisible}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </CheckBox.Style>
                            </CheckBox>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <Label
                FontWeight="Bold"
                FontSize="14"
                Padding="0,5,5,5"
                >Script content:</Label>

            <!-- Multiline TextBox below the list -->
            <TextBox AcceptsReturn="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 Height="100"
                 Margin="0,10,0,0"
                 Text="{Binding QueryContent, Mode=TwoWay}"/>

            <!-- Action buttons -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Cancel" Width="80"  Margin="0,0,10,0" Click="CancelButton_Click"/>
                <Button Content="Execute" Width="80" Click="ExecuteButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>

</Window>